                  <div class="h5 p-1 bd-highlight"><%= survey.q5 %></div>

                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions5" id="inlineRadio51" value="true" checked=true>
