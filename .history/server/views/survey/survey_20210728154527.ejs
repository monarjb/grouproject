                  <div class="h5 p-1 bd-highlight"><%= survey.q1 %></div>

                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions1" id="inlineRadio11" value="true" checked=true>
                    <label class="form-check-label" for="inlineRadio1">True</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions1" id="inlineRadio12" value="false">
                    <label class="form-check-label" for="inlineRadio2">False</label>
                  </div>
                <% } %>

                <% if (survey.type == "scaled") { %> 
                <div class="d-flex flex-column bd-highlight mb-3"></div>
                  <div class="h5 p-1 bd-highlight"><%= survey.q1 %></div>

                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions1" id="inlineRadio11" value="true" checked=true>
                    <label class="form-check-label" for="inlineRadio1">1</label>
                  </div>
