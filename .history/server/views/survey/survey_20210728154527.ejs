                    <input class="form-check-input" type="radio" name="inlineRadioOptions2" id="inlineRadio22" value="false">
                    <label class="form-check-label" for="inlineRadio2">False</label>
                  </div>
                
                <div class="d-flex flex-column bd-highlight mb-3"></div>
                  <div class="h5 p-1 bd-highlight"><%= survey.q3 %></div>

                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions3" id="inlineRadio31" value="true" checked=true>
