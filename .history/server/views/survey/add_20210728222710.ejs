<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>New Survey Questions</h1>
            <form class="form" method="POST">
              <div class="form-group">
                <label class="h5" for="NameTextField">Please name the new survey. Name must be unique.</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Survey Name" name="title" value="" required>
              </div>

              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="surveytype" id="inlineRadio1" value="true-false">
                <label class="form-check-label" for="inlineRadio1">True/False</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="surveytype" id="inlineRadio2" value="scale">
                <label class="form-check-label" for="inlineRadio2">Scale</label>
              </div>

              <script>
                $("date").on("change", function() {
                    this.setAttribute(
                        "data-date",
                        moment(this.value, "YYYY-MM-DD").local().
                        .format( this.getAttribute("data-date-format") )
                    )
                }).trigger("change")
              </script>
              <!--placeholder="Survey start date"-->
               
              <div class="form-group col-md-3">
                <label class="h6" for="">Survey Start Date</label>
                <input type="date" class="date" id=""
                placeholder="yyyy-mm-dd" name="startdate" value=""  required data-date="">
              </div>
          
 
              <div class="form-group col-md-3">
                <label class="h6" for="">Survey End Date</label>
                <input type="date" class="date" id=""
                placeholder="Survey end date" name="enddate" value=""  required>
              </div>
             
              <% for (i=1; i < 6; i++) { %>             
              <div class="form-group">
                <label for="NameTextField">Question<%= i %></label>
                <input type="text" class="form-control" id=""
                placeholder="Questionn #1" name="q<%= i %>" value="" required>
              </div>
              <% } %>

